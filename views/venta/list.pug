
extends ../templates/layout

block content

        div 
            h3 listado de ventas
            table(border=1)
                thead 
                    tr
                        th id
                        th fecha
                        th total
                        th borrar 
                        th editar
                tbody 
                    each vent in venta
                        tr 
                            td=vent.id
                            td=vent.fecha                       
                            td=vent.total
                            td 
                                a(href=`/ventas/del/${vent.id}`) borrar 
                            td 
                                a(href=`/ventas/edit/${vent.id}`) editar 
            p 
