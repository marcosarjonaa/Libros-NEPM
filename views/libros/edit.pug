extends ../templates/layout

block content 
    h3 Editar un libro
        div 
            form(method="post") 
                label(for="titulo") Titulo:
                input(type="text", name="titulo", value=`${libros.nombre}`)
                
                br
                label(for="fPublicacion") Apellido:
                input(type="date", name="fPublicacion", value=`${libros.fPublicacion}`)
                
                br
                label(for="precio") Precio: 
                input(type="double", name="precio",value=`${libros.precio}`) 
                
                br
                input(type="hidden", name="id", value=`${alumno.id}`)
                input(type="submit", value="Enviar")